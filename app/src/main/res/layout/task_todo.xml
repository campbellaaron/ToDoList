<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
    android:padding="10dp"
    android:background="#DDB"
    android:layout_height="match_parent">

    <TextView
        android:text="Category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/category_text"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Title"
        android:id="@+id/task_title"
        android:textStyle="bold"
        android:ellipsize="end"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/taskComplete"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/text"
        android:id="@+id/note_text"
        android:ellipsize="end"
        android:paddingTop="10dp"
        android:layout_below="@+id/task_title"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:text="Complete?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/taskComplete"
        android:layout_below="@+id/category_text"
        android:layout_alignParentStart="true"
        android:layout_marginTop="11dp"
        android:focusable="false" />

    <ImageView
        android:layout_height="45dp"
        android:layout_below="@+id/task_time"
        android:layout_alignStart="@+id/task_time"
        android:layout_marginTop="13dp"
        android:id="@+id/task_image"
        android:layout_width="60dp" />

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceSmall"
    android:text="@string/pick_date"
        android:id="@+id/view_date"
        android:layout_below="@+id/category_text"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/task_time"
        android:layout_alignBaseline="@+id/taskComplete"
        android:layout_alignBottom="@+id/taskComplete"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Modified Date"
        android:layout_height="wrap_content"
        android:id="@+id/modifiedDate"
        android:textSize="9sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content" />

</RelativeLayout>